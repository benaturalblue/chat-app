<div class="main-header">
  <div class="group-name">hogefuga</div>
  <div class="exit-room">
     <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="messages">
  <div class="upper-messages">
    <div class="user-name">Tom</div>
    <div class="timestamp">2020/3/31(Wed) 12:43:30</div>
  </div>
  <div class="lower-messages">
    <div class="message">おはよう</div>
  </div>

  <div class="upper-messages">
    <div class="user-name">Tom</div>
    <div class="timestamp">2021/5/10(Sat) 11:27:15</div>
  </div>
  <div class="lower-messages">
    <div class="message">こんばんは</div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
</div>
